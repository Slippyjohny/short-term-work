<%= form_for task, class: "form-horizontal",title:"Новое задание" do |f| %>
    <% if task.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
          <ul>
            <% task.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="form-group">
      <div class="col-sm-10">

        <%= f.label :category_id, "Выберите категорию" %>
        <%= f.select :category_id, ['Выбeрите категорию']+Category.all.collect { |s| [s.body, s.id] }, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        <%= f.label :status_id, "Выберите cтатус выполнения задания" %>
        <%= f.collection_select :status, ['Выбирите статус']+Task::STATUSES, :to_s, lambda { |i| i.to_s.humanize }, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= f.label :title, "Заголовок" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= f.label :body, "Описание" %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= f.label :cost, "Цена, грн." %>
        <%= f.number_field :cost, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= f.label :location, "Место, адресс" %>
        <%= f.text_field :location, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <p>
      <div class=" col-sm-10">
        <%= f.submit class: "btn btn-default" %>

      </div>
      </p>
    </div>

<% end %>
